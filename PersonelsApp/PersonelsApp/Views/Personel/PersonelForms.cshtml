@model PersonelsApp.ViewModel.PersonelViewModel
@{
    ViewBag.Title = "PersonelForms";
    Layout = "~/Views/Shared/_Layoud.cshtml";
}

@using (Html.BeginForm("Kaydet", "Personel", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form">
        <div class="form-group">
            @Html.LabelFor(x => x.Personel.Ad)
            @Html.TextBoxFor(x => x.Personel.Ad, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Personel.Ad)
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Personel.Soyad)
            @Html.TextBoxFor(x => x.Personel.Soyad, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Personel.Soyad)
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Personel.Yas)
            @Html.TextBoxFor(x => x.Personel.Yas, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Personel.Yas)
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Personel.Maas)
            @Html.TextBoxFor(x => x.Personel.Maas, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Personel.Maas)
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Personel.DogumTarihi)
            @Html.TextBoxFor(x => x.Personel.DogumTarihi, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
            @Html.ValidationMessageFor(x => x.Personel.DogumTarihi)
        </div>
        <div class="form-group">
            @Html.RadioButtonFor(x => x.Personel.Cinsiyet, true) Erkek
            @Html.RadioButtonFor(x => x.Personel.Cinsiyet, false) Kadın
        </div>
        <div class="form-group">
            @Html.CheckBoxFor(x => x.Personel.EvliMi) Evliyseniz Seçiniz
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Personel.Departman)
            @Html.DropDownListFor(x => x.Personel.DepartmanId, new SelectList(Model.Departmanlar, "Id", "Ad"), "Seçiniz..", new { @class = "form-control" })
        </div>
    </div>
    @Html.HiddenFor(x => x.Personel.Id)
    <button class="btn btn-success">Kaydet</button>
}

@section scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}

