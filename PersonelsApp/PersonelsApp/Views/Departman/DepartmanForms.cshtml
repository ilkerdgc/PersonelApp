@model PersonelsApp.Models.Departman
@{
    /**/

    ViewBag.Title = "DepartmanForms";
    Layout = "~/Views/Shared/_Layoud.cshtml";
}

<div id="mesaj"></div>
@using (Ajax.BeginForm("Kaydet", "Departman", new AjaxOptions { HttpMethod="POST", UpdateTargetId="mesaj"  }))
{
    @Html.AntiForgeryToken()
    <div class="form">
        <div class="form-group">
            @Html.LabelFor(x => x.Ad)
            @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Ad)
        </div>
    </div>
    @Html.HiddenFor(x => x.Id)
    <button class="btn btn-success">Kaydet</button>
}

@section scripts{ <!-- Client Side taraflı valitadion kontrolleri için -->
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}

